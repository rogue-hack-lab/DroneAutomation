{
    "env": {
        "browser": true,
        "es6": true,
        "node": true,
        "mocha": true
    },
    "parserOptions": {
        "ecmaFeatures": {
            "impliedStrict": true,
            "jsx": false
        },
        "sourceType": "module"
    },
    "rules": {
        "no-const-assign": "warn",
        "no-this-before-super": "warn",
        "no-undef": "warn",
        "no-unreachable": "warn",
        "no-unused-vars": "warn",
        "constructor-super": "warn",
        "valid-typeof": "warn",
        "quotes": [ "warn", "single" ],
        "no-multi-spaces": "warn",
        "no-multiple-empty-lines": "warn",
        "no-trailing-spaces": "warn",
        "semi": ["warn","never"],
        "no-extra-semi": "warn",
        "new-cap": "warn",
        "indent": [ "warn", "tab" ]
    }
}